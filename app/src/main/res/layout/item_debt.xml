<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:background="@drawable/form_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- NEW: ImageView for loading debt.imageUri via Glide -->
            <ImageView
                android:id="@+id/ivDebtImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/debt_image"
                android:src="@drawable/image_placeholder" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tom → Ron"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:fontFamily="@font/eb_garamond_variable_font_wght" />

            <CheckBox
                android:id="@+id/checkboxFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite"
                android:textSize="12sp"
                android:fontFamily="@font/eb_garamond_variable_font_wght"/>

            <CheckBox
                android:id="@+id/checkboxHandled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/handled"
                android:textSize="12sp"
                android:fontFamily="@font/eb_garamond_variable_font_wght" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lunch at restaurant"
            android:textSize="14sp"
            android:textColor="#555555"
            android:fontFamily="@font/eb_garamond_variable_font_wght"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₪100"
            android:textSize="16sp"
            android:textColor="#444444"
            android:fontFamily="@font/eb_garamond_variable_font_wght"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAmountUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="≈ $XX.XX"
            android:textSize="14sp"
            android:textColor="#227722"
            android:fontFamily="@font/eb_garamond_variable_font_wght"
            android:layout_marginBottom="4dp" />


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/05/2025"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/eb_garamond_variable_font_wght" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
